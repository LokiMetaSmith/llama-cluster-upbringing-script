FROM python:3.11-slim

WORKDIR /app

# Install system dependencies if needed (e.g. for building wheels)
# RUN apt-get update && apt-get install -y build-essential

# Install semantic router
# The package name is vllm-sr (from the website) but pip package is semantic-router?
# The website said `pip install vllm-sr`.
# Let's try vllm-sr based on the findings.
RUN pip install --no-cache-dir vllm-sr

# The entrypoint for 'vllm-sr serve'
# Based on `vllm-sr serve` command.
# We might need to expose the port.
EXPOSE 8000

# Default command
CMD ["vllm-sr", "serve"]
