job "mqtt" {
  datacenters = ["dc1"]
  type        = "service"

  group "mqtt-group" {
    count = 1

    network {
      port "mqtt" {
        to = 1883
      }
      port "ws" {
        to = 9001
      }
    }

    volume "mqtt-data" {
      type      = "host"
      source    = "mqtt-data"
      read_only = false
    }

    service {
      name     = "mqtt"
      port     = "mqtt"
      provider = "consul"

      check {
        type     = "tcp"
        interval = "10s"
        timeout  = "2s"
      }
    }


    task "mosquitto" {
      driver = "docker"

      config {
        image = "eclipse-mosquitto:2"
        ports = ["mqtt", "ws"]
        cap_add = ["SETUID", "SETGID"]

        # The entrypoint is overridden to explicitly load the config file.
        # The config file itself is created by Ansible and placed in the host volume.
        # The entrypoint is overridden to explicitly load the config file.
        # The config file itself is created by Ansible and placed in the host volume.
        command = "mosquitto"
        args = ["-c", "/mosquitto/mosquitto.conf"]
      }

      volume_mount {
        volume      = "mqtt-data"
        destination = "/mosquitto"
        read_only   = false
      }

      resources {
        cpu    = 200 # 200 MHz
        memory = 128 # 128 MB
      }
    }
  }
}