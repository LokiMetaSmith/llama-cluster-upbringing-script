job "mqtt" {
  datacenters = ["dc1"]
  type        = "service"

  group "mqtt-group" {
    count = 1

    network {
      mode = "host"
      port "mqtt" {
        static = 1883
      }
      port "ws" {
        static = 9001
      }
    }

    volume "mqtt-data" {
      type      = "host"
      source    = "mqtt-data"
      read_only = false
    }

    # Service Block at Group Level (Correct Placement)
    service {
      name     = "mqtt"
      port     = "mqtt"
      provider = "consul"
      check {
        type     = "tcp"
        name     = "mqtt_tcp_health"
        port     = "mqtt"
        interval = "10s"
        timeout  = "2s"
      }
      #  check {
      #    type     = "script"
      #    name     = "mqtt_health"
      #    command  = "mosquitto_pub"
      #    args     = ["-h", "127.0.0.1", "-p", "1883", "-t", "health/check", "-m", "ok", "-q", "0"]
      #    interval = "10s"
      #    timeout  = "2s"
      #    task     = "mosquitto"
      #    check_restart {
      #      limit = 3
      #      grace = "90s"
      #      ignore_warnings = false
      #    }
      #  }
      }
    }
    restart {
      attempts = 10
      interval = "5m"
      delay    = "25s"
      mode     = "delay"
    }
    task "mosquitto" {
      driver = "docker"

      config {
        image = "eclipse-mosquitto:2"
        # Host mode networking requires no port map here
        cap_add = ["SETUID", "SETGID", "CHOWN", "NET_BIND_SERVICE"]
        command = "mosquitto"
        args    = ["-c", "/mosquitto/config/mosquitto.conf"]
      }

      volume_mount {
        volume      = "mqtt-data"
        destination = "/mosquitto"
        read_only   = false
      }

      resources {
        cpu    = 200
        memory = 128
      }

      user = "1883"
    }
  }
}
