job "mqtt" {
  datacenters = ["dc1"]
  type        = "service"

  group "mqtt-group" {
    count = 1

    network {
      mode = "host"
      port "mqtt" {
        static = 1883
      }
      port "ws" {
        static = 9001
      }
    }

    volume "mqtt-data" {
      type      = "host"
      source    = "mqtt-data"
      read_only = false
    }

    service {
      name     = "mqtt"
      port     = "mqtt"
      provider = "consul"
      address_mode = "host"

      check {
        name     = "mqtt-tcp"
        type     = "tcp"
        port     = "mqtt"
        interval = "10s"
        timeout  = "2s"
        address_mode = "host"
        check_restart {
          limit = 3
          grace = "30s"
          ignore_warnings = false
        }
      }
    }

    restart {
      attempts = 10
      interval = "5m"
      delay    = "25s"
      mode     = "delay"
    }

    task "mosquitto" {
      driver = "docker"

      config {
        image = "eclipse-mosquitto:2"
        # When network mode is "host", port mapping in the driver config is not used/required
        # and can cause binding conflicts or warnings. We rely on the network stanza.
        cap_add = ["SETUID", "SETGID", "CHOWN", "NET_BIND_SERVICE"]

        # By not specifying a command, we allow the container to use its
        # default entrypoint, which is a script that correctly initializes the
        # Mosquitto service, including setting file permissions.
      }

      volume_mount {
        volume      = "mqtt-data"
        destination = "/mosquitto"
        read_only   = false
      }

      resources {
        cpu    = 200 # 200 MHz
        memory = 128 # 128 MB
      }
    }
  }
}
