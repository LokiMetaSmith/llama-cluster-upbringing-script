job "moe-gateway" {
  datacenters = ["dc1"]
  type        = "service"

  group "gateway" {
    count = 1

    network {
      mode = "host"
      port "http" {}
    }

    task "gateway-server" {
      driver = "raw_exec"

      config {
        command = "{{ pipecat_app_dir }}/venv/bin/python"
        args    = ["{{ pipecat_app_dir }}/moe_gateway/gateway.py"]
      }

      service {
        name = "moe-gateway"
        port = "http"

        check {
          type         = "http"
          path         = "/health"
          interval     = "10s"
          timeout      = "2s"
          address_mode = "host"
        }
      }

      template {
        data = <<EOH
#!/bin/bash
# We can add any startup logic here if needed in the future.
EOH
        destination = "local/run.sh"
        perms       = "755"
      }
    }
  }
}
