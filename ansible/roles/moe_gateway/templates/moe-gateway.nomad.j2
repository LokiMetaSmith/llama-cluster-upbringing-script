job "moe-gateway" {
  datacenters = ["dc1"]
  type        = "service"

  group "gateway" {
    count = 1

    network {
      mode = "host"
      port "http" {}
    }

    service {
      name = "moe-gateway"
      port = "http"
      tags = ["moe-gateway", "http"]
      address_mode = "host"

      check {
        type         = "http"
        path         = "/health"
        interval     = "10s"
        timeout      = "2s"
        address_mode = "host"

        check_restart {
          limit = 3
          grace = "30s"
          ignore_warnings = false
        }
      }
    }

    task "gateway-server" {
      driver = "raw_exec"

      env {
        CONSUL_HTTP_TOKEN = "{{ consul_bootstrap_token }}"
      }

      config {
        command = "{{ pipecat_app_dir }}/venv/bin/python"
        args    = ["{{ pipecat_app_dir }}/moe_gateway/gateway.py"]
      }

      template {
        data = <<EOH
#!/bin/bash
# We can add any startup logic here if needed in the future.
EOH
        destination = "local/run.sh"
        perms       = "755"
      }

      resources {
        cpu    = 500
        memory = 512
      }
    }
  }
}
