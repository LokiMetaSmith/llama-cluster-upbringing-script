job "mcp-server" {
  datacenters = ["dc1"]
  type = "service"

  group "mcp-server" {
    count = 1

    network {
      mode = "host"
      port "http" {}
    }

    task "mcp-server" {
      driver = "docker"
      config {
        image = "temuujinmunkhtsetseg/jules-mcp:latest"
      }

      env {
        JULES_API_KEY = "{{ jules_api_key }}"
        HOST          = "0.0.0.0"
        PORT          = "${NOMAD_PORT_http}"
      }

      service {
        name = "mcp-server"
        port = "http"
        tags = ["mcp"]
        address_mode = "host"

        check {
          type     = "http"
          path     = "/health"
          interval = "10s"
          timeout  = "2s"
          address_mode = "host"

          check_restart {
            limit = 3
            grace = "30s"
            ignore_warnings = false
          }
        }
      }
    }
  }
}
