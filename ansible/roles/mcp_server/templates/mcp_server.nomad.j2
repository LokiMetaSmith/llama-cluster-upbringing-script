job "mcp-server" {
  datacenters = ["dc1"]
  type = "service"

  group "mcp-server" {
    count = 1

    network {
      port "http" {
        to = 8000
      }
    }

    task "mcp-server" {
      driver = "docker"
      config {
        image = "temuujinmunkhtsetseg/jules-mcp:latest"
        ports = ["http"]
      }

      env {
        JULES_API_KEY = "{{ jules_api_key }}"
        HOST          = "0.0.0.0"
        PORT          = "8000"
      }

      service {
        name = "mcp-server"
        port = "http"
        tags = ["mcp"]

        check {
          type     = "http"
          path     = "/health"
          interval = "10s"
          timeout  = "2s"
        }
      }
    }
  }
}
