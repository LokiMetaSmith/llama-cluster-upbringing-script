job "memory-service" {
  datacenters = ["dc1"]
  type        = "service"

  group "memory-api" {
    count = 1

    network {
      mode = "bridge"
      port "http" {
        static = 8000
        to     = 8000
      }
    }

    # Create a persistent volume for the database
    # In a real setup, this should be a host_volume defined in Nomad client config
    volume "memory-data" {
      type      = "host"
      source    = "memory-data"
      read_only = false
    }

    task "api" {
      driver = "docker"

      config {
        image = "memory_service:local"
        force_pull = false
        ports = ["http"]
      }

      volume_mount {
        volume      = "memory-data"
        destination = "/data"
        read_only   = false
      }

      env {
        PORT = "8000"
        MEMORY_DB_PATH = "/data/pmm_memory.db"
      }

      resources {
        cpu    = 200
        memory = 256
      }

      service {
        name = "memory-service"
        port = "http"

        check {
          name     = "alive"
          type     = "http"
          path     = "/health"
          interval = "10s"
          timeout  = "2s"
          address_mode = "host"
        }
      }
    }
  }
}
