job "chromadb" {
  datacenters = ["dc1"]
  type        = "service"

  group "chroma-group" {
    count = 1

    volume "chroma-data" {
      type      = "host"
      read_only = false
      source    = "chroma-volume"
    }

    network {
      port "http" {
        to = 8000
      }
    }

    task "server" {
      driver = "docker"

      config {
        image = "chromadb/chroma:latest"
        ports = ["http"]
      }

      volume_mount {
        volume      = "chroma-data"
        destination = "/chroma/chroma"
        read_only   = false
      }

      resources {
        cpu    = 500 # Chroma can be CPU intensive during indexing
        memory = 512
      }

      service {
        name = "chromadb-api"
        tags = ["api", "vector-db"]
        port = "http"

        check {
          type     = "http"
          path     = "/api/v1/heartbeat"
          interval = "15s"
          timeout  = "5s"
        }
      }
    }
  }
}