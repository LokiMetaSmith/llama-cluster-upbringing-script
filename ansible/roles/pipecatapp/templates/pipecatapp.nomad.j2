job "{{ job_name | default('pipecat-app') }}" {
  datacenters = ["dc1"]
  type        = "service"

  group "pipecat-group" {
    count = 1

    network {
      mode = "host"
      port "http" {
        to = 8000
      }
    }
    
    service {
      name     = "{{ service_name | default('prima-api-main') }}"
      port     = "http"
      provider = "consul"

      check {
        type     = "http"
        path     = "/health"
        interval = "10s"
        timeout  = "2s"
      }
    }

    task "pipecat-task" {
      driver = "raw_exec"
 
      config {
        command = "/opt/pipecatapp/start_pipecat.sh"
        volumes = [
          "{{ host_volume_source | default('/opt/pipecatapp') }}:/opt/pipecatapp",
        ]
      }

      resources {
        cpu    = 1000 # 1 GHz
        memory = 1024 # 4 GB
      }
    }
  }
}
