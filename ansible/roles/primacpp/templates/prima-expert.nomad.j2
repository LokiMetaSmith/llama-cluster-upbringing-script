job "prima-expert-main" {
  datacenters = ["dc1"]
  type        = "service"

  group "prima-expert-group" {
    count = 1

    network {
      port "http" {
        to = 8080 # Default port for primaserver
      }
    }

    service {
      name     = "prima-api-main"
      port     = "http"
      provider = "consul"

      check {
        type     = "http"
        path     = "/health"
        interval = "15s"
        timeout  = "5s"
      }
    }

    task "primaserver" {
      driver = "raw_exec"

      config {
        command = "/usr/local/bin/primaserver"
        args = [
          "--model", "{{ model_path }}",
          "--port", "${NOMAD_PORT_http}",
          "--host", "0.0.0.0",
          "--threads", "4"
        ]
      }

      resources {
        cpu    = 1000 # 1 GHz
        memory = 4096 # 4 GB
      }
    }
  }
}
