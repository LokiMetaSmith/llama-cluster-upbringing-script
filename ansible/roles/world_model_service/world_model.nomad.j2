job "world-model-service" {
  datacenters = ["dc1"]
  type        = "service"

  group "world-model" {
    count = 1

    volume "world_model_storage" {
      type      = "host"
      read_only = false
      source    = "world_model_storage"
    }

    network {
      mode = "host"
      port "http" {}
    }

    task "server" {
      driver = "docker"

      config {
        image   = "world-model-service:latest"
        ports   = ["http"]
        force_pull = false
      }

      volume_mount {
        volume      = "world_model_storage"
        destination = "/data"
        read_only   = false
      }

      env {
        MQTT_HOST = "{{ advertise_ip }}"
        MQTT_PORT = "1883"
        CONSUL_HOST = "{{ advertise_ip }}"
        CONSUL_PORT = "8500"
        PORT = "${NOMAD_PORT_http}"
      }

      resources {
        cpu    = 250
        memory = 256
      }

      service {
        name = "world-model-api"
        tags = ["api", "world-model"]
        port = "http"

        check {
          type     = "http"
          path     = "/state"
          interval = "10s"
          timeout  = "2s"
        }
      }
    }
  }
}
