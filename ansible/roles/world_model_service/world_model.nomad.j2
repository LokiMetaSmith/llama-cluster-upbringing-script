job "world-model-service" {
  datacenters = ["dc1"]
  type        = "service"

  group "world-model" {
    count = 1

    volume "world_model_storage" {
      type      = "host"
      read_only = false
      source    = "world_model_storage"
    }

    network {
      mode = "host"
      port "http" {}
    }

    task "server" {
      driver = "docker"

      config {
        image   = "world-model-service:latest"
        ports   = ["http"]
        force_pull = false
      }

      volume_mount {
        volume      = "world_model_storage"
        destination = "/data"
        read_only   = false
      }

      env {
        MQTT_HOST = "{{ advertise_ip }}"
        MQTT_PORT = "1883"
        CONSUL_HOST = "{{ advertise_ip }}"
        CONSUL_PORT = "8500"
        NOMAD_ADDR = "http://{{ advertise_ip }}:4646"
      }

      resources {
        cpu    = 250
        memory = 512
      }

      service {
        name = "world-model-api"
        tags = ["api", "world-model"]
        port = "http"

        check {
          type     = "script"
          name     = "check-state"
          command  = "/usr/local/bin/python"
          args     = ["-c", "import httpx, os; httpx.get('http://127.0.0.1:' + os.environ['NOMAD_PORT_http'] + '/state').raise_for_status()"]
          interval = "15s"
          timeout  = "10s"
        }
      }
    }
  }
}
