job "tool-server" {
  datacenters = ["dc1"]
  type        = "service"

  group "tool-server-group" {
    count = 1

    network {
      port "http" {}
    }

    task "tool-server-task" {
      driver = "docker"

      config {
        image = "tool-server:latest"
        ports = ["http"]

        # Volatile RAM disk for workspace
        mounts = [
          {
            type   = "tmpfs"
            target = "/opt/cluster-infra"
            tmpfs_options = {
              size = 1073741824 # 1GB
            }
          }
        ]

        volumes = [
          # Read-only source of truth from host
          "{{ cluster_infra_dir }}:/mnt/host_repo:ro",
          # MCP tools configuration
          "{{ mcp_dir }}:/opt/mcp",
          # Docker socket for CodeRunnerTool
          "/var/run/docker.sock:/var/run/docker.sock",
          # Uncomment below to enable host SSH keys (Not recommended for isolation)
          # "/home/{{ target_user }}/.ssh:/root/.ssh:ro",
        ]

        command = "uvicorn"
        args = ["app:app", "--host", "0.0.0.0", "--port", "${NOMAD_PORT_http}"]
      }

      env {
        TOOL_SERVER_API_KEY = "{{ openai_api_key }}"
        HA_URL              = "{{ env_ha_url | default('') }}"
        HA_TOKEN            = "{{ env_ha_token | default('') }}"
        GITHUB_TOKEN        = "{{ github_token | default('') }}"
        GIT_USERNAME        = "{{ git_username | default('Pipecat Agent') }}"
        GIT_EMAIL           = "{{ git_email | default('agent@pipecat.ai') }}"
      }

      service {
        name = "tool-server-api"
        port = "http"
        tags = ["tool-server-api", "http"]

        check {
          type     = "http"
          path     = "/health"
          interval = "10s"
          timeout  = "2s"
        }
      }
    }
  }
}
