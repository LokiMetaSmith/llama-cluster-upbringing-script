job "tool-server" {
  datacenters = ["dc1"]
  type        = "service"

  group "tool-server-group" {
    count = 1

    network {
      port "http" {
        to = "8001"
      }
    }

    task "tool-server-task" {
      driver = "docker"

      config {
        image = "tool-server:latest"
        ports = ["http"]
      }

      env {
        TOOL_SERVER_API_KEY = "{{ openai_api_key }}"
      }

      service {
        name = "tool-server"
        port = "http"
        tags = ["tool-server", "http"]

        check {
          type     = "http"
          path     = "/health"
          interval = "10s"
          timeout  = "2s"
        }
      }
    }
  }
}
