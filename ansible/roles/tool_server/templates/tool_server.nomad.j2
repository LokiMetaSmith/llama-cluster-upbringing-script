job "tool-server" {
  datacenters = ["dc1"]
  type        = "service"

  group "tool-server-group" {
    count = 1

    network {
      port "http" {}
    }

    task "tool-server-task" {
      driver = "docker"

      config {
        image = "tool-server:latest"
        ports = ["http"]

        command = "uvicorn"
        args = ["app:app", "--host", "0.0.0.0", "--port", "${NOMAD_PORT_http}"]
      }

      env {
        TOOL_SERVER_API_KEY = "{{ openai_api_key }}"
      }

      service {
        name = "tool-server-api"
        port = "http"

        check {
          type     = "http"
          path     = "/tools/"
          interval = "10s"
          timeout  = "2s"
        }
      }
    }
  }
}
