job "openclaw" {
  datacenters = ["dc1"]
  type        = "service"

  group "gateway" {
    count = 1

    network {
      port "gateway" {
        static = 18789
      }
    }

    task "openclaw" {
      driver = "docker"

      config {
        image = "openclaw:latest"
        image_pull_timeout = "15m"
        ports = ["gateway"]

        # Mount config and workspace
        mounts = [
          {
            type   = "bind"
            source = "/opt/openclaw/config"
            target = "/root/.openclaw"
          },
          {
            type   = "bind"
            source = "/opt/openclaw/data"
            target = "/root/.openclaw/workspace"
          },
          {
            type   = "bind"
            source = "/opt/openclaw/skills/pipecat"
            target = "/root/.openclaw/workspace/skills/pipecat"
          }
        ]
      }

      env {
        TERM = "xterm-256color"
        # Enable Shell tool for integration
        # Note: You may need to explicitly allow the shell tool in ~/.openclaw/openclaw.json
        # or via OPENCLAW_TOOL_POLICIES env vars if supported.
      }

      resources {
        cpu    = 500
        memory = 512
      }

      service {
        name = "openclaw"
        port = "gateway"
        tags = ["openclaw", "gateway"]

        check {
          name     = "alive"
          type     = "tcp"
          interval = "10s"
          timeout  = "2s"
        }
      }
    }
  }
}
