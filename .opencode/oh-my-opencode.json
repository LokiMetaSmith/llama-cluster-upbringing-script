{
  "$schema": "https://raw.githubusercontent.com/code-yeongyu/oh-my-opencode/master/assets/oh-my-opencode.schema.json",
  "sisyphus_agent": {
    "disabled": false,
    "default_builder_enabled": false,
    "planner_enabled": true,
    "replace_plan": true
  },
  "agents": {
    "Sisyphus": {
      "model": "local/router-main",
      "description": "The main orchestrator agent that plans and delegates tasks.",
      "temperature": 0.1
    },
    "oracle": {
      "model": "local/expert-reasoning",
      "description": "Expert reasoning agent for architecture and debugging.",
      "temperature": 0.2
    },
    "librarian": {
      "model": "local/expert-context",
      "description": "Agent for documentation and codebase research.",
      "temperature": 0.1
    },
    "explore": {
      "model": "local/expert-fast",
      "description": "Fast agent for code exploration and pattern matching.",
      "temperature": 0.1
    },
    "frontend-ui-ux-engineer": {
      "model": "local/expert-creative",
      "description": "Specialized agent for UI/UX tasks.",
      "temperature": 0.3
    }
  },
  "disabled_hooks": [
    "auto-update-checker",
    "startup-toast"
  ],
  "claude_code": {
    "mcp": true,
    "commands": true,
    "skills": true,
    "agents": true,
    "hooks": true
  }
}
